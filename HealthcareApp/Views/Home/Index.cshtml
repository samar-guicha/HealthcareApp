@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Home Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        /* Custom styles for the home page */
       

        .jumbotron {
            background-color: #007bff;
            color: #fff;
        }

            .jumbotron h1 {
                font-size: 48px;
                font-weight: bold;
            }

            .jumbotron p {
                font-size: 20px;
            }

        .feature-card {
            height: 300px;
        }

            .feature-card i {
                font-size: 48px;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>

    <header class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">Welcome to Our Hospital</h1>
            <p class="lead">Providing Quality Healthcare Services</p>
        </div>
    </header>

    <section class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-clock"></i>
                        <h5 class="card-title">Experienced Doctors</h5>
                        <p class="card-text">Our hospital has a team of highly skilled and experienced doctors.</p>
                        <img src="/lib/images/doc.jpg" alt="Emergency Services" height="180p" width="250p">
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-clock"></i>
                        <h5 class="card-title">24/7 Emergency Services</h5>
                        <p class="card-text">We provide round-the-clock emergency medical services for our patients.</p>
                        <img src="/lib/images/24.jpg" alt="Emergency Services"  height="180p" width="250p">
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <i class="bi bi-clock"></i>
                        <h5 class="card-title">State-of-the-Art Facilities</h5>
                        <p class="card-text">Our hospital is equipped with modern facilities and advanced medical technology.</p>
                        <img src="/lib/images/tick.png" alt="Emergency Services" height="150p" width="150p">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h2>About Us</h2>
                <p>Welcome to our Health Application! We provide a user-friendly platform to efficiently manage doctors and appointments. Simplify the scheduling process and enhance healthcare delivery with our streamlined system. Join us today and experience the convenience of our Health Application.</p>
                <a href="#" class="btn btn-primary">Learn More</a>
            </div>
            <div class="col-md-6">
                <img src="/lib/images/doc1.jpg" alt="HealthCareApp Image" class="img-fluid">
            </div>
        </div>
    </section>

    

    <!-- Bootstrap JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

   
      